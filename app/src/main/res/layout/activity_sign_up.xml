<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true">

    <android.support.v7.widget.AppCompatImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:scaleType="fitXY"
        android:src="@drawable/background" />

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.65"
        android:background="@color/blakcolor" />

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/img_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:fillViewport="true"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_20_height" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_10_height" />


                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/img_profile"
                        android:layout_width="@dimen/_90sdp"
                        android:layout_height="@dimen/_90sdp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:src="@drawable/edit_img" />

                    <!--<de.hdodenhof.circleimageview.CircleImageView-->
                    <!--android:layout_width="@dimen/_35sdp"-->
                    <!--android:layout_height="@dimen/_35sdp"-->
                    <!--android:layout_gravity="top|center"-->
                    <!--android:background="@drawable/circle_shape_white"-->
                    <!--android:layout_marginStart="@dimen/_42sdp"-->
                    <!--android:layout_marginTop="@dimen/_30sdp"-->
                    <!--/>-->
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/img_add"
                        android:layout_width="@dimen/_35sdp"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_gravity="top|center"
                        android:layout_marginStart="@dimen/_35sdp"
                        android:layout_marginTop="@dimen/_34sdp"
                        android:background="@drawable/circle_shape_white"
                        android:padding="@dimen/_4sdp"
                        android:src="@drawable/ic_camera" />
                </FrameLayout>


                <Space
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_15_height" />

                <android.support.v7.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="411">

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="89" />

                    <android.support.v7.widget.LinearLayoutCompat
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="233"
                        android:orientation="vertical">

                        <android.support.v7.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:weightSum="411">

                            <apps.pixel.bzender.Utills.MyTextViewBold
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="@string/register"
                                android:textColor="@color/whitecolor"
                                android:textSize="@dimen/_16ssp"
                                android:textStyle="bold"
                                android:visibility="gone" />
                        </android.support.v7.widget.LinearLayoutCompat>

                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_4_height" />

                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_10_height" />

                        <apps.pixel.bzender.Utills.MyTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/name"
                            android:textColor="@color/whitecolor"
                            android:textSize="@dimen/_8ssp"
                            android:textStyle="bold" />

                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_4_height" />

                        <apps.pixel.bzender.Utills.MyEditText
                            android:id="@+id/user_name"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/pin_height"
                            android:background="@color/whitecolor"
                            android:inputType="text"
                            android:maxLines="1"
                            android:paddingStart="@dimen/_4_height"
                            android:paddingEnd="@dimen/_4_height"
                            android:textColor="@color/blakcolor"
                            android:textColorHint="@color/blakcolor"
                            android:textSize="@dimen/_13ssp" />


                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_10_height" />

                        <apps.pixel.bzender.Utills.MyTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/email_address"
                            android:textColor="@color/whitecolor"
                            android:textSize="@dimen/_8ssp"
                            android:textStyle="bold" />

                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_4_height" />

                        <apps.pixel.bzender.Utills.MyEditText
                            android:id="@+id/email_address"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/pin_height"
                            android:background="@color/whitecolor"
                            android:inputType="textEmailAddress"
                            android:maxLines="1"
                            android:paddingStart="@dimen/_4_height"
                            android:paddingEnd="@dimen/_4_height"
                            android:textColor="@color/blakcolor"
                            android:textColorHint="@color/blakcolor"
                            android:textSize="@dimen/_13ssp" />

                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_10_height" />

                        <apps.pixel.bzender.Utills.MyTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/password"
                            android:textColor="@color/whitecolor"
                            android:textSize="@dimen/_8ssp"
                            android:textStyle="bold" />

                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_4_height" />

                        <apps.pixel.bzender.Utills.MyEditText
                            android:id="@+id/password"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/pin_height"
                            android:background="@color/whitecolor"
                            android:inputType="textPassword"
                            android:maxLines="1"
                            android:paddingStart="@dimen/_4_height"
                            android:paddingEnd="@dimen/_4_height"
                            android:textColor="@color/blakcolor"
                            android:textColorHint="@color/blakcolor"
                            android:textSize="@dimen/_13ssp" />

                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_10_height" />

                        <apps.pixel.bzender.Utills.MyTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/confirm_password"
                            android:textColor="@color/whitecolor"
                            android:textSize="@dimen/_8ssp"
                            android:textStyle="bold" />

                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_4_height" />

                        <apps.pixel.bzender.Utills.MyEditText
                            android:id="@+id/confirm_password"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/pin_height"
                            android:background="@color/whitecolor"
                            android:inputType="textPassword"
                            android:maxLines="1"
                            android:paddingStart="@dimen/_4_height"
                            android:paddingEnd="@dimen/_4_height"
                            android:textColor="@color/blakcolor"
                            android:textColorHint="@color/blakcolor"
                            android:textSize="@dimen/_13ssp" />

                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_10_height" />

                        <apps.pixel.bzender.Utills.MyTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/address"
                            android:textColor="@color/whitecolor"
                            android:textSize="@dimen/_8ssp"
                            android:textStyle="bold" />

                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_4_height" />

                        <apps.pixel.bzender.Utills.MyTextView
                            android:id="@+id/address"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/pin_height"
                            android:background="@color/whitecolor"
                            android:drawableEnd="@drawable/arrow_down"
                            android:drawablePadding="@dimen/_4_height"
                            android:gravity="start|center"
                            android:inputType="text"
                            android:maxLines="1"
                            android:paddingStart="@dimen/_4_height"
                            android:paddingTop="@dimen/_4sdp"
                            android:paddingEnd="@dimen/_4_height"
                            android:paddingBottom="@dimen/_4sdp"
                            android:textColor="@color/blakcolor"
                            android:textColorHint="@color/blakcolor"
                            android:textSize="@dimen/_11ssp" />

                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_10_height" />

                        <android.support.v7.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="233">

                            <android.support.v7.widget.LinearLayoutCompat
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="60"
                                android:orientation="vertical">

                                <apps.pixel.bzender.Utills.MyTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/country"
                                    android:textColor="@color/whitecolor"
                                    android:textSize="@dimen/_8ssp"
                                    android:textStyle="bold" />

                                <Space
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_4_height" />

                                <apps.pixel.bzender.Utills.MyTextView
                                    android:id="@+id/country_code"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/pin_height"
                                    android:background="@color/whitecolor"
                                    android:drawableEnd="@drawable/arrow_down"
                                    android:drawablePadding="@dimen/_4_height"
                                    android:gravity="center"
                                    android:inputType="text"
                                    android:maxLines="1"
                                    android:paddingStart="@dimen/_4sdp"
                                    android:paddingTop="@dimen/_3sdp"
                                    android:paddingEnd="@dimen/_4sdp"
                                    android:paddingBottom="@dimen/_3sdp"
                                    android:textColor="@color/blakcolor"
                                    android:textColorHint="@color/blakcolor"
                                    android:textSize="@dimen/_10ssp" />

                            </android.support.v7.widget.LinearLayoutCompat>

                            <Space
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="17" />

                            <android.support.v7.widget.LinearLayoutCompat
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="156"
                                android:orientation="vertical">

                                <apps.pixel.bzender.Utills.MyTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/mobile_number"
                                    android:textColor="@color/whitecolor"
                                    android:textSize="@dimen/_8ssp"
                                    android:textStyle="bold" />

                                <Space
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_4_height" />

                                <apps.pixel.bzender.Utills.MyEditText
                                    android:id="@+id/phone_number"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/pin_height"
                                    android:background="@color/whitecolor"
                                    android:drawablePadding="@dimen/_4_height"
                                    android:inputType="phone"
                                    android:maxLines="1"
                                    android:paddingStart="@dimen/_4_height"
                                    android:paddingEnd="@dimen/_4_height"
                                    android:textColor="@color/blakcolor"
                                    android:textColorHint="@color/blakcolor"
                                    android:textSize="@dimen/_13ssp" />

                            </android.support.v7.widget.LinearLayoutCompat>


                        </android.support.v7.widget.LinearLayoutCompat>

                    </android.support.v7.widget.LinearLayoutCompat>

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="89" />
                </android.support.v7.widget.LinearLayoutCompat>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_4_height" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_15_height" />

                <android.support.v7.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:gravity="center"
                    android:orientation="horizontal"

                    android:padding="@dimen/_10sdp">

                    <android.support.v7.widget.AppCompatCheckBox
                        android:id="@+id/checkbox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/whitecolor"
                        android:checked="false"
                        android:gravity="center|start"
                        android:padding="@dimen/_10sdp" />


                    <apps.pixel.bzender.Utills.MyTextViewBold
                        android:id="@+id/txt_terms"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center|start"
                        android:text="@string/terms_and_conditions_agree"
                        android:textColor="@color/whitecolor"
                        android:textSize="@dimen/_12ssp" />

                </android.support.v7.widget.LinearLayoutCompat>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_15_height" />


                <android.support.v7.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="411">

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="146" />

                    <apps.pixel.bzender.Utills.ButtonBook
                        android:id="@+id/mBtnSignUp"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_45_height"
                        android:layout_gravity="center"
                        android:layout_weight="125"
                        android:background="@color/colorAccent"
                        android:gravity="center"
                        android:text="@string/register"
                        android:textColor="@color/whitecolor"
                        android:textSize="@dimen/_13ssp"
                        android:textStyle="bold"
                        tools:ignore="TooManyViews" />

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="144" />
                </android.support.v7.widget.LinearLayoutCompat>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30_height" />

            </android.support.v7.widget.LinearLayoutCompat>

        </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>

</RelativeLayout>