<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="#1c2b53"
    android:gravity="center"
    android:orientation="vertical">

    <Space
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_53_height" />

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:weightSum="411">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/img"
            android:layout_width="0dp"
            android:layout_height="@dimen/most_ordered_item_height"
            android:layout_weight="180"
            android:layout_gravity="center"
            android:scaleType="fitXY"
            android:src="@drawable/slide_3"
            />

    </android.support.v7.widget.LinearLayoutCompat>

    <Space
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_88_dp_height" />

    <apps.pixel.bzender.Utills.MyTextViewBold
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="@dimen/margin_txt"
        android:text="@string/intro_three_first_txt"
        android:textColor="@color/whitecolor"
        android:textSize="@dimen/_18ssp" />

    <Space
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_53_height" />

    <apps.pixel.bzender.Utills.MyTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="@dimen/margin_txt"
        android:text="@string/intro_three_second_txt"
        android:textColor="@color/whitecolor"
        android:textSize="@dimen/_12ssp" />
</android.support.v7.widget.LinearLayoutCompat>