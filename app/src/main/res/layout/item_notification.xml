<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginBottom="@dimen/_15_height"
    android:background="@color/whitecolor"
    android:gravity="center"
    android:orientation="horizontal"
    android:paddingStart="@dimen/safe_margin"
    android:paddingTop="@dimen/_10_height"
    android:paddingEnd="@dimen/safe_margin"
    android:paddingBottom="@dimen/_10_height">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/img"
        android:layout_width="0dp"
        android:layout_height="@dimen/_45_height"
        android:layout_weight="13"
        android:src="@drawable/bzender" />

    <apps.sharabash.bzender.Utills.MyTextView
        android:id="@+id/desc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        android:layout_weight="50"
        android:textColor="@color/labanycolor"
        android:textSize="@dimen/_10ssp"
        android:textStyle="bold" />

    <apps.sharabash.bzender.Utills.MyTextView
        android:id="@+id/date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_weight="30"
        android:gravity="center"
        android:textColor="@color/app_color"
        android:textSize="@dimen/_10ssp"
        android:textStyle="bold" />


</android.support.v7.widget.LinearLayoutCompat>
