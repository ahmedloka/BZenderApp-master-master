<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layoutDirection="ltr"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/chat_left_msg_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/img_left"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_gravity="center"
                    android:padding="@dimen/_4sdp"
                    android:src="@drawable/bzender" />

                <android.support.v7.widget.LinearLayoutCompat
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start|center"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@drawable/outcoming_speech_bundle"
                        android:orientation="vertical"
                        android:paddingStart="@dimen/_4sdp"
                        android:paddingEnd="@dimen/_4sdp"
                        android:paddingBottom="@dimen/_3sdp"
                        android:weightSum="100">

                        <LinearLayout
                            android:id="@+id/linear_name_left"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_15sdp"
                            android:orientation="horizontal"
                            android:weightSum="100">


                            <apps.sharabash.bzender.Utills.MyTextView
                                android:id="@+id/text_name_left"
                                android:layout_width="@dimen/_90sdp"
                                android:layout_height="@dimen/_15sdp"
                                android:layout_marginStart="@dimen/_6sdp"
                                android:gravity="center|start"
                                android:paddingStart="@dimen/_2sdp"
                                android:paddingEnd="@dimen/_2sdp"
                                android:maxLines="1"
                                android:textColor="@color/blakcolor"
                                android:textSize="@dimen/_10ssp" />

                        </LinearLayout>

                        <apps.sharabash.bzender.Utills.MyTextViewBold
                            android:id="@+id/chat_left_msg_text_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center|top"
                            android:paddingStart="@dimen/_15sdp"
                            android:paddingEnd="@dimen/_15sdp"
                            android:paddingBottom="@dimen/_5sdp"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/_12ssp" />

                    </LinearLayout>

                </android.support.v7.widget.LinearLayoutCompat>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/chat_right_msg_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|center"
                    android:layout_marginStart="5dp"
                    android:background="@drawable/incoming_speech_bundle"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/_4sdp"
                    android:paddingEnd="@dimen/_4sdp"
                    android:weightSum="100">

                    <LinearLayout
                        android:id="@+id/linear_name_right"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_15sdp"
                        android:orientation="horizontal"
                        android:weightSum="100">

                        <apps.sharabash.bzender.Utills.MyTextView
                            android:id="@+id/text_name_right"
                            android:layout_width="@dimen/_80sdp"
                            android:layout_height="@dimen/_15sdp"
                            android:layout_marginEnd="@dimen/_6sdp"
                            android:gravity="center|end"
                            android:maxLines="1"
                            android:paddingStart="@dimen/_2sdp"
                            android:paddingEnd="@dimen/_2sdp"
                            android:textColor="@color/blakcolor"
                            android:textSize="@dimen/_10ssp" />


                    </LinearLayout>

                    <apps.sharabash.bzender.Utills.MyTextViewBold
                        android:id="@+id/chat_right_msg_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center|top"
                        android:paddingStart="@dimen/_15sdp"
                        android:paddingEnd="@dimen/_15sdp"
                        android:paddingBottom="@dimen/_5sdp"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/_12ssp" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>