<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.TenderElectricalDetails">

    <android.support.v7.widget.AppCompatImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/app_bg" />


    <android.support.v4.widget.NestedScrollView
        android:id="@+id/img_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?actionBarSize"
        android:fillViewport="true">

        <android.support.v7.widget.LinearLayoutCompat
            android:id="@+id/linear_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:orientation="vertical">

            <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="@dimen/_10sdp"
                android:paddingTop="@dimen/_5sdp"
                android:paddingEnd="@dimen/_10sdp"
                android:paddingBottom="@dimen/_5sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <apps.pixel.bzender.Utills.MyTextView
                            android:id="@+id/txt_type"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_gravity="start"
                            android:layout_weight="1"
                            android:layout_toStartOf="@id/checkbox_type"
                            android:gravity="start|center"
                            android:paddingTop="@dimen/_5sdp"
                            android:paddingBottom="@dimen/_5sdp"
                            android:text="@string/ele_un_type"
                            android:textColor="@color/whitecolor"
                            android:textSize="@dimen/_12ssp" />

                        <android.support.v7.widget.AppCompatCheckBox
                            android:id="@+id/checkbox_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_gravity="end"
                            android:layout_weight="1"
                            android:gravity="end|center"
                            app:buttonTint="@color/whitecolor" />

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:layout_marginBottom="@dimen/_4sdp"
                        android:background="@color/seperator" />


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center">

                        <apps.pixel.bzender.Utills.MyTextView
                            android:id="@+id/txt_model"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toStartOf="@id/checkbox_model"
                            android:layout_alignParentStart="true"
                            android:layout_gravity="start"
                            android:layout_weight="1"
                            android:gravity="start|center"
                            android:paddingTop="@dimen/_5sdp"
                            android:layout_centerHorizontal="true"
                            android:paddingBottom="@dimen/_5sdp"
                            android:text="@string/modell"
                            android:textColor="@color/whitecolor"
                            android:textSize="@dimen/_12ssp" />

                        <android.support.v7.widget.AppCompatCheckBox
                            android:id="@+id/checkbox_model"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_gravity="end|center"
                            android:layout_weight="1"
                            android:gravity="end|center"
                            app:buttonTint="@color/whitecolor" />


                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:layout_marginBottom="@dimen/_4sdp"
                        android:background="@color/seperator" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <apps.pixel.bzender.Utills.MyTextView
                            android:id="@+id/txt_year"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_toStartOf="@id/checkbox_year"
                            android:layout_gravity="start|center"
                            android:layout_weight="1"
                            android:gravity="start"
                            android:paddingTop="@dimen/_5sdp"
                            android:paddingBottom="@dimen/_5sdp"
                            android:text="@string/year_of_man"
                            android:textColor="@color/whitecolor"
                            android:textSize="@dimen/_13ssp" />

                        <android.support.v7.widget.AppCompatCheckBox
                            android:id="@+id/checkbox_year"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_gravity="end"
                            android:layout_weight="1"
                            android:gravity="end|center"
                            app:buttonTint="@color/whitecolor" />


                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:layout_marginBottom="@dimen/_4sdp"
                        android:background="@color/seperator" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <apps.pixel.bzender.Utills.MyTextView
                            android:id="@+id/txt_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toStartOf="@id/checkbox_number"
                            android:layout_alignParentStart="true"
                            android:layout_gravity="start|center"
                            android:layout_weight="1"
                            android:gravity="start"
                            android:paddingTop="@dimen/_5sdp"
                            android:paddingBottom="@dimen/_5sdp"
                            android:text="@string/numb_of_un"
                            android:textColor="@color/whitecolor"
                            android:textSize="@dimen/_12ssp" />

                        <android.support.v7.widget.AppCompatCheckBox
                            android:id="@+id/checkbox_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_gravity="end|center"
                            android:layout_weight="1"
                            android:gravity="end|center"
                            app:buttonTint="@color/whitecolor" />


                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:layout_marginBottom="@dimen/_4sdp"
                        android:background="@color/seperator" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <apps.pixel.bzender.Utills.MyTextView
                            android:id="@+id/txt_electrical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_toStartOf="@id/checkbox_electricak"
                            android:layout_gravity="start|center"
                            android:layout_weight="1"
                            android:gravity="start"
                            android:paddingTop="@dimen/_5sdp"
                            android:paddingBottom="@dimen/_5sdp"
                            android:text="@string/elec_uni_stat"
                            android:textColor="@color/whitecolor"
                            android:textSize="@dimen/_12ssp" />

                        <android.support.v7.widget.AppCompatCheckBox
                            android:id="@+id/checkbox_electricak"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_gravity="end|center"
                            android:layout_weight="1"
                            android:gravity="end|center"
                            app:buttonTint="@color/whitecolor" />


                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:layout_marginBottom="@dimen/_4sdp"
                        android:background="@color/seperator" />


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <apps.pixel.bzender.Utills.MyTextView
                            android:id="@+id/txt_origin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toStartOf="@id/checkbox_origin"
                            android:layout_alignParentStart="true"
                            android:layout_gravity="start|center"
                            android:layout_weight="1"
                            android:gravity="start"
                            android:paddingTop="@dimen/_5sdp"
                            android:paddingBottom="@dimen/_5sdp"
                            android:text="@string/origin_of_man"
                            android:textColor="@color/whitecolor"
                            android:textSize="@dimen/_12ssp" />

                        <android.support.v7.widget.AppCompatCheckBox
                            android:id="@+id/checkbox_origin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_gravity="end"
                            android:layout_weight="1"
                            android:gravity="end|center"
                            app:buttonTint="@color/whitecolor" />

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:layout_marginBottom="@dimen/_4sdp"
                        android:background="@color/seperator" />


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <apps.pixel.bzender.Utills.MyTextView
                            android:id="@+id/txt_extra"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_gravity="start|center"
                            android:layout_toStartOf="@id/checkbox_extra"
                            android:layout_weight="1"
                            android:gravity="start"
                            android:paddingTop="@dimen/_5sdp"
                            android:paddingBottom="@dimen/_5sdp"
                            android:text="@string/extra_feat"
                            android:textColor="@color/whitecolor"
                            android:textSize="@dimen/_12ssp" />

                        <android.support.v7.widget.AppCompatCheckBox
                            android:id="@+id/checkbox_extra"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_gravity="end"
                            android:layout_weight="1"
                            android:gravity="end|center"
                            app:buttonTint="@color/whitecolor" />


                    </RelativeLayout>


                </LinearLayout>


            </android.support.v7.widget.LinearLayoutCompat>


            <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_weight="40"
                android:orientation="vertical">


                <android.support.v7.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/_5sdp"

                    android:paddingBottom="@dimen/_5sdp">

                    <apps.pixel.bzender.Utills.MyTextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="@string/price"
                        android:textColor="@color/whitecolor"
                        android:textSize="@dimen/_14ssp" />

                    <apps.pixel.bzender.Utills.MyEditText
                        android:id="@+id/et_price"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:background="@drawable/shape_white"
                        android:gravity="start"
                        android:hint="@string/enter_price"
                        android:inputType="number"
                        android:paddingStart="@dimen/_5sdp"
                        android:paddingTop="@dimen/_5sdp"
                        android:paddingEnd="@dimen/_5sdp"
                        android:paddingBottom="@dimen/_5sdp"
                        android:textSize="@dimen/_12ssp" />

                    <apps.pixel.bzender.Utills.MyTextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:gravity="center"
                        android:text="@string/le"
                        android:textColor="@color/whitecolor"
                        android:textSize="@dimen/_14ssp" />


                </android.support.v7.widget.LinearLayoutCompat>


                <apps.pixel.bzender.Utills.MyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:gravity="center"
                    android:text="@string/desc"
                    android:textColor="@color/whitecolor"
                    android:textSize="@dimen/_14ssp" />

                <apps.pixel.bzender.Utills.MyEditText
                    android:id="@+id/et_desc"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:background="@drawable/shape_white"
                    android:gravity="start"
                    android:inputType="textMultiLine|textImeMultiLine"
                    android:paddingStart="@dimen/_5sdp"
                    android:paddingTop="@dimen/_3sdp"
                    android:paddingEnd="@dimen/_5sdp"
                    android:paddingBottom="@dimen/_3sdp"
                    android:textSize="@dimen/_12ssp" />


            </android.support.v7.widget.LinearLayoutCompat>

            <apps.pixel.bzender.Utills.ButtonBook
                android:id="@+id/btn_book"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/_10sdp"
                android:background="@drawable/shape_dark_blue"
                android:gravity="center"
                android:text="@string/book"
                android:textColor="@color/whitecolor" />

        </android.support.v7.widget.LinearLayoutCompat>


    </android.support.v4.widget.NestedScrollView>

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/colorPrimary"
        android:paddingTop="@dimen/_20_height"
        android:paddingBottom="@dimen/_20_height"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        app:layout_collapseMode="pin"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        tools:ignore="UnusedAttribute">

        <LinearLayout
            android:id="@+id/title_appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="visible"
            android:weightSum="411">

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="20" />

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/imageNavigationIcon"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="25"
                android:scaleType="centerInside"
                android:src="@drawable/reply" />

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="22" />

            <apps.pixel.bzender.Utills.MyTextViewBold
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="344"
                android:text="@string/tender_details"
                android:textColor="@color/whitecolor"
                android:textSize="@dimen/_14ssp"
                android:textStyle="bold" />
        </LinearLayout>
    </android.support.v7.widget.Toolbar>

</RelativeLayout>